.talk
  .talk__user-info
    .talk__user-info__name 
      = message.user.name
    .talk__user-info__time 
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .talk__text
    - if message.content.present?
      %p.talk__text__content
        = message.content
    = image_tag message.image.url, class: 'talk__text__image' if message.image.present?
