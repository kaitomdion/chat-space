.wrapper 
  .left-contents
    .left-header
      .left-header__box
        %p.left-header__box__name 
          = current_user.name
        %ul.left-header__box__botton
          %li.left-header__box__botton__new-group
            = link_to new_group_path do
              %i.fa.fa-edit
          %li.left-header__box__botton__new-acount
            = link_to edit_user_path(current_user) do
              %i.fa.fa-cog
    .left-groups
      .group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .group__group-name 
              = group.name
            .group__group-text 
              = group.show_last_message
  .chat-space
    .top
      .top__left-box
        %p.top__left-box__group-name tech-expert
        %p.top__left-box__member Member
      =link_to 'Edit','/groups/current_user_id/edit', class:'top__edit-box'
    .talks
      = render @messages
      
    
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'


 